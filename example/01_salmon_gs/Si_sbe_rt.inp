&calculation
    theory = "sbe_rt"
/

&control
    sysname = "Si"
    base_directory = "./"
    gs_directory = "./"
    read_sbe_gs_bin = "n"
    write_sbe_gs_bin = "n"
/

&system
    al(1:3) = 10.26d0, 10.26d0, 10.26d0
    nstate = 32
    nelec = 32
    nstate_sbe = 32
/

&kgrid
    nkgrid(1:3) = 8, 8, 8
/

&tgrid
    dt = 0.05d0
    nt = 20000
/

&emfield
    ae_shape1 = "Acos2"
    epdir_re1(1:3) = 0.0d0, 0.0d0, 1.0d0
    I_wcm2_1 = 1.0d+12
    tw1 = 1000.0d0
    omega1 = 0.056d0
/

